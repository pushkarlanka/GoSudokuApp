<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="pushkarlanka.sudokosolver.GridActivity">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="00:00:00"-->
        <!--android:layout_gravity="center_horizontal"/>-->

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_marginTop="20dp"
        android:textColor="@color/hint_btn_red"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_grid"
        android:layout_gravity="center"
        android:stretchColumns="*">

        <!-- grid rows go here-->

    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number_buttons_row"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!--Number buttons go here-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:background="@drawable/hint_btn_selected_red"
            android:layout_marginLeft="76dp"
            android:layout_marginRight="40dp"
            android:id="@+id/hint_btn"
            android:text="Hint" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:id="@+id/solve_btn"
            android:background="@drawable/solve_btn_bg"
            android:text="Solve"/>

    </LinearLayout>


</LinearLayout>
